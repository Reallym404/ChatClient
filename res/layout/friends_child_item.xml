<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@android:color/white" >

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/friend_child_head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        bootstrap:bct_image="@drawable/head_image"
        bootstrap:bct_size="medium" />

    <LinearLayout
        android:id="@+id/friend_child_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/friend_child_head_image"
        android:layout_toRightOf="@+id/friend_child_head_image"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:textColor="@color/login_button"
            android:textSize="16sp"
            android:text="德玛" />

        <RelativeLayout
            android:id="@+id/friend_child_rela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip" >

            <TextView
                android:id="@+id/friend_child_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="[在线]" />

            <TextView
                android:id="@+id/friend_child_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@+id/friend_child_state"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="德玛爽肤水规范嘎嘎嘎" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>